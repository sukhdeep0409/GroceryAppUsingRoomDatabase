<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:backgroundTint="@color/blue_shade_2"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/id_ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/id_tv_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/white"
                android:text="Item Name"
                android:padding="4dp"
                android:layout_margin="3dp"/>

            <TextView
                android:id="@+id/id_tv_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textColor="@color/white"
                android:text="Quantity"
                android:padding="4dp"
                android:layout_margin="3dp"/>

            <TextView
                android:id="@+id/id_tv_rate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rate"
                android:textColor="@color/white"
                android:padding="4dp"
                android:layout_margin="3dp"/>

            <ImageView
                android:id="@+id/id_iv_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="4dp"
                android:src="@drawable/ic_delete"
                android:layout_margin="3dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/id_tv_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Cost"
            android:layout_toStartOf="@id/id_tv_total_amount"
            android:layout_below="@+id/id_ll1"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/id_tv_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Cost"
            android:layout_below="@+id/id_ll1"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:layout_alignParentEnd="true"
            android:padding="4dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>